<project name="OpenSOA-Book" default="install-ivy" xmlns:ivy="antlib:org.apache.ivy.ant">

  <property name="ivy.install.version" value="2.0.0-beta1"/>
  <property name="ivy.jar.dir" value="${basedir}/ivy"/>
  <property name="ivy.jar.file" value="${ivy.jar.dir}/ivy-2.0.0.jar"/>
  <property name="ivy.checksums" value=""/>

  <target name="install-ivy" description="--> install ivy">

    <echo message="Copying ${ivy.jar.file} to ${ant.home}\lib" />
    
    <copy file="${ivy.jar.file}" todir="${ant.home}\lib" />      
      
  </target>
  


</project>
